#carouselExampleControls.carousel.slide.col-11.mx-auto(data-ride='carousel')
    ol.carousel-indicators
        li.active(data-target="#carouselExampleControls", data-slide-to="0")
        li(data-target="#carouselExampleControls", data-slide-to="1")
        li(data-target="#carouselExampleControls", data-slide-to="2")
    .carousel-inner
      .carousel-item.active
        img.d-block.w-100(src="img/image1.jpg", alt="First slide")
      .carousel-item
        img.d-block.w-100(src="img/image2.jpg", alt="Second slide")
      .carousel-item
        img.d-block.w-100(src="img/image3.jpg", alt="Third slide")
    a.carousel-control-prev(href='#carouselExampleControls', role='button', data-slide='prev')
      span.carousel-control-prev-icon(aria-hidden='true')
      span.sr-only Previous
    a.carousel-control-next(href='#carouselExampleControls', role='button', data-slide='next')
      span.carousel-control-next-icon(aria-hidden='true')
      span.sr-only Next